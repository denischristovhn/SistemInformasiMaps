@page
@model SistemMaps.Pages.FormNamaLokasiModel
@{
	ViewData["Title"] = "Form Nama Lokasi";
}
<body>
    <h2>Add Location</h2>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div style="color: green;">
            <strong>@Model.Message</strong>
        </div>
    }

    @if (!ModelState.IsValid)
    {
        <div style="color: red;">
            <strong>Please fill in all required fields.</strong>
        </div>
    }

    <form method="post">
        <div>
            <label for="NamaLokasi">Location Name:</label>
            <input type="text" id="NamaLokasi" name="NamaLokasi" value="@Model.NamaLokasi" required />
        </div>
        <div>
            <label for="Alamat">Address:</label>
            <input type="text" id="Alamat" name="Alamat" value="@Model.Alamat" required />
        </div>
        <div>
            <label for="Latitude">Latitude:</label>
            <input type="number" step="0.0000001" id="Latitude" name="Latitude" value="@Model.Latitude" required />
        </div>
        <div>
            <label for="Longitude">Longitude:</label>
            <input type="number" step="0.0000001" id="Longitude" name="Longitude" value="@Model.Longitude" required />
        </div>
        <div>
            <button type="submit">Add Location</button>
        </div>
    </form>

    <br />

    <a href="/LocationList">View Locations</a> <!-- Link to view the list of locations -->
</body>
