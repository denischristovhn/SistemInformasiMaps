@page
@model SistemMaps.Pages.LocationListModel
@{
    ViewData["Title"] = "Daftar Lokasi";
}
<body>
    <h2>Locations List</h2>

    <a href="/FormNamaLokasi">Add New Location</a> <!-- Link to add a new location -->

    <br />
    <br />

    @if (Model.Locations.Count == 0)
    {
        <p>No locations available.</p>
    }
    else
    {
        <table>
            <thead>
                <tr>
                    <th>Location Name</th>
                    <th>Address</th>
                    <th>Latitude</th>
                    <th>Longitude</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var location in Model.Locations)
                {
                    <tr>
                        <td>@location.NamaLokasi</td>
                        <td>@location.Alamat</td>
                        <td>@location.latitude</td>
                        <td>@location.longitude</td>
                        <td>
                            <a href="/EditLokasi?Id=@location.Id">Edit</a> <!-- Link to edit the location -->
                            <form method="post" asp-page-handler="Delete" asp-route-id="@location.Id" style="display:inline;">
                                <button type="submit" onclick="return confirm('Are you sure you want to delete this location?');">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</body>

